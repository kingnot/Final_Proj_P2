@model IEnumerable<EcommP2.Models.Food>

@{
    ViewBag.Title = "Index";
}

<section id="home" class="shopping-box">
    <div class="container">
        <div class="row transbox">
            @*
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            *@
            <div class="col-md-12 col-sm-12">
                <h2>Menu Items</h2>


                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.image)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.price)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.type)
                            </td>
                            <td>
                                <a href="~/Foods/Details/@item.foodID">@Html.DisplayFor(modelItem => item.name)</a>
                            </td>
                            <td>
                                <a href="~/Foods/Details/@item.foodID"><img src="~/Assests/img/@Html.DisplayFor(modelItem => item.type)/@Html.DisplayFor(modelItem => item.image)" height="150" width="150" /></a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.price)
                            </td>
                            @*
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.foodID }) |
                                @Html.ActionLink("Edit", "Edit", new { id = item.foodID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.foodID })
                            </td>
                            *@                          
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</section>
